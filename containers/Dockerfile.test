# Syndicate CI Test Dockerfile

FROM syndicate-ci-base
MAINTAINER Zack Williams <zdw@cs.arizona.edu>

# Install Syndicate UG tools
RUN DEBIAN_FRONTEND=noninteractive apt-get update && apt-get install -y --force-yes\
    build-essential \
    fuse \
    graphviz \
    python-magic \
    python-pip \
    python-psutil \
    python-yaml \
    syndicate-ag \
    syndicate-rg \
    syndicate-ug-tools \
    syndicatefs \
    valgrind

# Install fstest
COPY fstest /opt/fstest
WORKDIR /opt/fstest
RUN make && cp fstest /usr/bin/ && chmod 777 /usr/bin/fstest

#install gprof2dot for python
RUN pip install gprof2dot

# Join to the fuse group
RUN usermod -aG fuse syndicate

# Switch to being the syndicate user
USER syndicate

# Switch to /opt
WORKDIR /opt

# Run the tests
CMD [ "/bin/bash" ]
